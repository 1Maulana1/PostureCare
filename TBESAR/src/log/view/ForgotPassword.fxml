<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.log.controller.ForgotPasswordController">
    <children>
        <Label styleClass="title" text="Forgot Password?" />
        <Label styleClass="subtitle" text="Enter your email to reset your password" />
        
        <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
        
        <Button onAction="#handleResetPassword" prefWidth="250.0" styleClass="button-primary" text="Send Reset Link" />
        <Hyperlink onAction="#handleBackToLogin" text="Back to Login" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>