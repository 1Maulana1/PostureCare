<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Box?>

<AnchorPane fx:id="Main" maxHeight="491.0" maxWidth="480" minHeight="270" minWidth="480" prefHeight="491.0" prefWidth="480" stylesheets="@notW.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NotifController">
    <StackPane fx:id="subPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox layoutX="10" layoutY="10" prefHeight="400" prefWidth="460" spacing="12" styleClass="main-container">
         <Button fx:id="backButton" onAction="#handleBackToDashboard" styleClass="icon-button" stylesheets="@../css/style.css">
            <graphic>
               <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../assets/back-arrow.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
            <Label styleClass="title" text="Pengingat Olahraga" />
            <Label styleClass="subtitle" text="Daftar Notifikasi" />
            <ListView fx:id="notifikasiListView" prefHeight="241.0" prefWidth="440.0" styleClass="list-view" />
            <VBox spacing="10" styleClass="notification-form">
                <Label styleClass="form-title" text="Tambah/Ubah Notifikasi" />
                <HBox alignment="CENTER_LEFT" prefHeight="127.0" prefWidth="409.0" spacing="10">
                    <TextField fx:id="inputField" prefWidth="220" promptText="Masukkan pesan notifikasi..." styleClass="text-field" />
               <Box depth="100" height="10.0" width="20.0" />
                    <Label text="Interval:" />
                    <TextField fx:id="intervalField" prefWidth="80" promptText="0" styleClass="text-field" />
                </HBox>
                <HBox spacing="10">
                    <Button onAction="#handleTambah" styleClass="btn-tambah" text="Tambah" />
                    <Button onAction="#handlePilih" styleClass="btn-pilih" text="Pilih" />
                    <Button onAction="#handleTerapkan" styleClass="btn-terapkan" text="Terapkan" />
                    <Button onAction="#handleHapus" styleClass="btn-hapus" text="Hapus" />
                    <ComboBox fx:id="intervalTypeBox" prefHeight="28.0" prefWidth="79.0" />
                </HBox>
            </VBox>
            <VBox prefHeight="137.0" prefWidth="440.0" spacing="10" styleClass="control-panel">
                <Label styleClass="control-title" text="Kontrol Pengingat" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button onAction="#handleMulaiPengingat" styleClass="btn-start" text="Mulai Pengingat" />
                </HBox>
                <Label fx:id="statusLabel" styleClass="status-label" text="Status: -" />
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
